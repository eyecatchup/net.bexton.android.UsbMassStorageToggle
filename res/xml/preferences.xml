<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    
<PreferenceCategory android:title="@string/PrefsCategoryAppSettings">
   	<CheckBoxPreference android:key="stickyNotifications" android:title="@string/PrefsStickyNotificationsTitle" android:summary="@string/PrefsStickyNotificationsSummary" android:defaultValue="true" />
   	<CheckBoxPreference android:key="usbAutoMount" android:title="@string/PrefsAutoMountTitle" android:summary="@string/PrefsAutoMountSummary" android:defaultValue="false" />
   	<CheckBoxPreference android:key="warnBeforeMount" android:title="@string/PrefsWarnOnMountTitle" android:summary="@string/PrefsWarnOnMountSummary" android:defaultValue="false" />
	<CheckBoxPreference android:key="loggingEnabled" android:title="@string/PrefsLoggingTitle" android:summary="@string/PrefsLoggingSummary" android:defaultValue="true" />

 </PreferenceCategory><PreferenceCategory android:title="@string/PrefsCategoryPathSettings">
