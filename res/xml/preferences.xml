	<EditTextPreference android:key="pointExt" android:title="@string/PrefsEXTMountPointsTitle" android:summary="@string/PrefsEXTMountPointsSummary" android:defaultValue="" /> 
	<EditTextPreference android:key="path" android:title="@string/PrefsLUNPathTitle" android:summary="@string/PrefsLUNPathSummary" android:defaultValue=""/>
</PreferenceCategory>

<PreferenceCategory android:title="@string/PrefsCategoryMountSettings">
    <CheckBoxPreference android:key="defaultMount" android:title="@string/PrefsDefaultMountTitle" android:summary="@string/PrefsDefaultMountSummary" android:defaultValue="true" />
    <CheckBoxPreference android:key="mtpSupport" android:title="@string/PrefsMTPSupportTitle" android:summary="@string/PrefsMTPSupportSummary" android:defaultValue="false" />
</PreferenceCategory>
 
 <PreferenceCategory android:title="@string/PrefsCategoryInfo">
	<Preference android:title="@string/PrefsDeviceName" android:summary="" android:key="deviceName" />
	<Preference android:title="@string/PrefsVersion" android:summary="@string/AppVersion" android:key="version" />
	<Preference android:title="@string/PrefsAuthor" android:summary="@string/AppAuthor" android:key="author" /> 
 </PreferenceCategory>

</PreferenceScreen>
